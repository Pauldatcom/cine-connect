{
  "name": "cine-connect",
  "version": "1.0.0",
  "private": true,
  "description": "A collaborative platform to discover, filter, rate, and discuss movies - Letterboxd inspired",
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @cine-connect/shared build",
    "dev": "concurrently -n 'frontend,backend' -c 'cyan,green' 'pnpm dev:frontend' 'pnpm dev:backend'",
    "dev:frontend": "pnpm --filter @cine-connect/frontend dev",
    "dev:backend": "pnpm --filter @cine-connect/backend dev",
    "dev:all": "concurrently -n 'db,backend,frontend' -c 'yellow,green,cyan' 'docker-compose up' 'pnpm dev:backend' 'pnpm dev:frontend'",
    "build": "pnpm run --parallel build",
    "build:frontend": "pnpm --filter @cine-connect/frontend build",
    "build:backend": "pnpm --filter @cine-connect/backend build",
    "start": "pnpm --filter @cine-connect/backend start",
    "pretest": "pnpm --filter @cine-connect/shared build",
    "test": "pnpm run --parallel test",
    "test:frontend": "pnpm --filter @cine-connect/frontend test",
    "test:backend": "pnpm --filter @cine-connect/backend test",
    "pretest:coverage": "pnpm --filter @cine-connect/shared build",
    "test:coverage": "pnpm run --parallel test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm run --parallel typecheck",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report e2e-report",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:generate": "pnpm --filter @cine-connect/backend db:generate",
    "db:migrate": "pnpm --filter @cine-connect/backend db:migrate",
    "db:push": "pnpm --filter @cine-connect/backend db:push",
    "db:studio": "pnpm --filter @cine-connect/backend db:studio",
    "setup": "./scripts/setup-env.sh",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules frontend/dist backend/dist coverage",
    "prepare": "husky"
  },
  "keywords": [
    "cinema",
    "movies",
    "social",
    "react",
    "nodejs",
    "fullstack",
    "letterboxd"
  ],
  "author": "CinÃ©Connect Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript-eslint": "^8.18.1",
    "wait-on": "^9.0.3"
  }
}
